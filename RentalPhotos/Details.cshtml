@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="RentalPhotos-Details--form-contain">
    <h1>Rental Photo Details</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10 offset-1 text-center">
            <div>
                <h3>@Html.DisplayNameFor(model => model.RentalsName)</h3>
            </div>

            <div>
                <h5>@Html.DisplayFor(model => model.RentalsName)</h5>
            </div>

            <div>
                <h3>@Html.DisplayNameFor(model => model.Damages)</h3>
            </div>

            <div>
                <h5>@Html.DisplayFor(model => model.Damages)</h5>
            </div>
            @{
                string image = "";
                if (Model.RentalPhotos != null)
                {
                    image = Convert.ToBase64String(Model.RentalPhotos);
                }
            }

            <div>
                <h3>@Html.DisplayNameFor(model => model.RentalPhotos)</h3>
            </div>

            <div>
                <img src="data:image/jpg;base64, @image" class="image-index--size" />
            </div>

            <div>
                <h3>@Html.DisplayNameFor(model => model.Details)</h3>
            </div>

            <div>
                <h5>@Html.DisplayFor(model => model.Details)</h5>
            </div>


            @*<div class="col mb-4 text-center">
            @Html.ActionLink("Back to List", "Index")
        </div>*@



            @using (Html.BeginForm())
            {
